{
  "name": "MaaYuan",
  "version": "0.3.1",
  "custom_title": "MAA鸢",
  "default_controller": "adb",
  "controller": [
    {
      "name": "安卓端",
      "type": "Adb"
    },
    {
      "name": "桌面端",
      "type": "Win32",
      "win32": {
        "class_regex": ".*",
        "window_regex": "Visual Studio"
      }
    }
  ],
  "resource": [
    {
      "name": "官服",
      "path": ["{PROJECT_DIR}/resource"]
    }
  ],
  "task": [
    {
      "name": "启动如鸢",
      "entry": "启动游戏",
      "checked": true,
      "doc": "启动国服小号鸢，这个包名是taptap下载的，如启动不了可能是下载来源不同"
    },
    {
      "name": "开始游戏",
      "entry": "启动游戏",
      "checked": true,
      "doc": "运行游戏后从启动页面到主页面"
    },

    {
      "name": "6-24",
      "entry": "6-24开始位置",
      "option": ["6-24开始位置"]
    },
    {
      "name": "待办公务",
      "entry": "待办公务可做任务",
      "option": ["公务类型", "决策事件选择", "循环开关"],
      "doc": ""
    }
  ],
  "option": {
    "6-24开始位置":{
      "cases": [
        {
          "name":"第六章页面",
          "pipeline_override": {
            "6-24开始位置":{
              "next": [
            "进入6-24"
        ]
            }
          }
        },
        {
          "name":"关卡内",
          "pipeline_override": {
            "6-24开始位置":{
              "next": [
            "战斗6-24"
        ]
            }
          }
        }
        
      ]
    },
    "公务类型": {
      "cases": [
        {
          "name": "作战+建材",
          "pipeline_override": {
            "待办公务可做任务": {
              "next": ["识别请求出战", "识别包含建材的物资支援"]
            }
          }
        },
        {
          "name": "所有公务",
          "pipeline_override": {
            "待办公务可做任务": {
              "next": ["识别请求出战", "识别物资支援", "识别决策事件"]
            }
          }
        },
        {
          "name": "作战+决策",
          "pipeline_override": {
            "待办公务可做任务": {
              "next": ["识别请求出战", "识别决策事件"]
            }
          }
        }
      ]
    },
    "决策事件选择": {
      "cases": [
        {
          "name": "经验",
          "pipeline_override": {
            "决策事件选择": {
              "roi": [487, 511, 142, 49]
            }
          }
        },
        {
          "name": "五铢钱",
          "pipeline_override": {
            "决策事件选择": {
              "roi": [487, 745, 139, 42]
            }
          }
        }
      ]
    },
    "循环开关": {
      "cases": [
        {
          "name": "开",
          "pipeline_override": {
            "当前没有可办公务": {
              "next": ["识别下一份鸢报", "stop"]
            }
          }
        },
        {
          "name": "关",
          "pipeline_override": {
            "当前没有可办公务": {
              "next": ["stop"]
            }
          }
        }
      ]
    }
  }
}
