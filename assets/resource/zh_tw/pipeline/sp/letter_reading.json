{
  "读信启动": {
    "recognition": {
      "type": "DirectHit",
      "param": {}
    },
    "action": {
      "type": "DoNothing",
      "param": {}
    },
    "timeout": 10000,
    "focus": "开始读信",
    "next": ["读信-已进入心纸君check", "[JumpBack]进入界面-心纸君"]
  },
  "读信-已进入心纸君check": {
    "recognition": {
      "type": "TemplateMatch",
      "param": {
        "template": "house/call.png",
        "roi": [28, 1008, 100, 100]
      }
    },
    "action": {
      "type": "DoNothing",
      "param": {}
    },
    "timeout": 10000,
    "focus": {
      "failed": "未找到信件，停止任务"
    },
    "next": ["读信-找信件"]
  },
  "读信-找信件": {
    "recognition": {
      "type": "FeatureMatch",
      "param": {
        "template": ["letter1.png", "letter2.png"],
        "roi": [0, 240, 720, 693],
        "green_mask": true,
        "count": 8
      }
    },
    "action": {
      "type": "Click",
      "param": {}
    },
    "pre_delay": 1000,
    "post_wait_freezes": 2000,
    "next": ["读信-回信", "[JumpBack]读信-读信中check", "[JumpBack]读信启动"]
  },
  "读信行动": {
    "recognition": {
      "type": "DirectHit",
      "param": {}
    },
    "action": {
      "type": "DoNothing",
      "param": {}
    },
    "next": [
      "读信-回信",
      "读信-选择",
      "读信-收起信件",
      "[JumpBack]读信-读信中check"
    ]
  },
  "读信-回信": {
    "recognition": {
      "type": "OCR",
      "param": {
        "expected": "回信",
        "roi": [308, 1086, 107, 41]
      }
    },
    "action": {
      "type": "Click",
      "param": {}
    },
    "pre_delay": 1000,
    "next": ["读信行动", "[JumpBack]读信-读信中check"]
  },
  "读信-选择": {
    "recognition": {
      "type": "TemplateMatch",
      "param": {
        "template": "letter_choice.png",
        "roi": [76, 1013, 67, 243]
      }
    },
    "action": {
      "type": "Click",
      "param": {}
    },
    "pre_delay": 1000,
    "next": ["读信行动", "[JumpBack]读信-读信中check"]
  },
  "读信-收起信件": {
    "recognition": {
      "type": "OCR",
      "param": {
        "expected": "收起信件",
        "roi": [308, 1086, 107, 41]
      }
    },
    "action": {
      "type": "Click",
      "param": {}
    },
    "pre_delay": 1000,
    "post_wait_freezes": 2000,
    "focus": "读完信件x1！＼\\٩( 'ω' )و //／",
    "timeout": 5000,
    "next": ["读信-找信件"],
    "on_error": ["读信-结束"]
  },
  "读信-读信中check": {
    "recognition": {
      "type": "TemplateMatch",
      "param": {
        "template": "letter_loading.png",
        "roi": [11, 849, 468, 193]
      }
    },
    "action": {
      "type": "DoNothing",
      "param": {}
    }
  },
  "读信-结束": {
    "recognition": {
      "type": "DirectHit",
      "param": {}
    },
    "action": {
      "type": "DoNothing",
      "param": {}
    },
    "focus": "所有信件阅读完毕！任务结束",
    "next": ["stop"]
  }
}
